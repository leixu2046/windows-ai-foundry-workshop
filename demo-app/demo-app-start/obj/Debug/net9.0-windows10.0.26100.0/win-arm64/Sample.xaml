<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Sample.Sample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid
            MinWidth="240"
            MaxWidth="600"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="2"
            CornerRadius="{StaticResource OverlayCornerRadius}">
            <Viewbox x:ConnectionId='7'
                x:Name="ImageViewbox"
                Margin="-1"
                VerticalAlignment="Stretch"
                Stretch="Uniform">
                <Image x:ConnectionId='20' x:Name="ImageSrc" />
            </Viewbox>

            <Grid
                Margin="8"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="{StaticResource ControlCornerRadius}">
                <DropDownButton
                    Padding="8"
                    AutomationProperties.Name="Select image"
                    ToolTipService.ToolTip="Select image">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:ConnectionId='18'                         Text="From file" />
                            <MenuFlyoutItem x:ConnectionId='19'                          Text="From clipboard" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                    <FontIcon FontSize="16" Glyph="&#xEE71;" />
                </DropDownButton>
            </Grid>

            <StackPanel
                Margin="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="{StaticResource ControlCornerRadius}"
                Orientation="Horizontal"
                Spacing="8">
                <DropDownButton x:ConnectionId='10'
                    x:Name="ScenarioSelectButton"
                    Padding="8"
                    AutomationProperties.Name="Select scenario"
                    ToolTipService.ToolTip="Select scenario"
                    Visibility="Collapsed">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:ConnectionId='13'
                                                            
                                Tag="Accessible"
                                Text="Accessible" />
                            <MenuFlyoutItem x:ConnectionId='14'
                                                            
                                Tag="Caption"
                                Text="Caption" />
                            <MenuFlyoutItem x:ConnectionId='15'
                                                            
                                Tag="Detailed"
                                Text="Detailed" />
                            <MenuFlyoutItem x:ConnectionId='16'
                                                            
                                Tag="OfficeCharts"
                                Text="Office charts" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                    <TextBlock x:ConnectionId='17' x:Name="ScenarioSelectTextblock" Text="Caption" />
                </DropDownButton>
                <Button x:ConnectionId='11'
                    x:Name="StopBtn"
                    MinWidth="86"
                    AutomationProperties.Name="Stop"
                                         >
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon x:ConnectionId='12'
                            x:Name="StopIcon"
                            FontSize="16"
                            Glyph="&#xE73B;" />
                        <TextBlock Text="Stop" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <Grid
                MinHeight="35"
                Margin="8"
                Padding="8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                CornerRadius="{StaticResource ControlCornerRadius}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ProgressRing x:ConnectionId='8'
                    x:Name="Loader"
                    Width="32"
                    Height="32"
                    Margin="0,0,8,0"
                    VerticalAlignment="Top"
                    IsActive="True"
                    Visibility="Visible" />
                <TextBlock x:ConnectionId='9'
                    x:Name="ResponseTxt"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    IsTextSelectionEnabled="True"
                    TextWrapping="Wrap"
                    Visibility="Collapsed" />
            </Grid>
        </Grid>

        <!-- Phi Silica Query Section -->
        <Grid
            MinWidth="240"
            MaxWidth="600"
            Margin="0,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="2"
            CornerRadius="{StaticResource OverlayCornerRadius}">
            
            <StackPanel Margin="16" Spacing="12">
                <TextBlock
                    Text="Phi Silica Language Model"
                    Style="{ThemeResource TitleTextBlockStyle}" />
                
                <TextBox x:ConnectionId='2'
                    x:Name="QueryTextBox"
                    PlaceholderText="Ask me anything..."
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    MinHeight="80" />
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <Button x:ConnectionId='5'
                        x:Name="QueryButton"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                                                 >
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE8F4;" />
                            <TextBlock Text="Ask Phi Silica" />
                        </StackPanel>
                    </Button>
                    
                    <Button x:ConnectionId='6'
                        x:Name="QueryStopBtn"
                        Grid.Column="1"
                        MinWidth="86"
                        AutomationProperties.Name="Stop"
                                                  
                        Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE73B;" />
                            <TextBlock Text="Stop" />
                        </StackPanel>
                    </Button>
                </Grid>
                
                <Grid MinHeight="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <ProgressRing x:ConnectionId='3'
                        x:Name="QueryLoader"
                        Width="32"
                        Height="32"
                        Margin="0,0,8,0"
                        VerticalAlignment="Top"
                        IsActive="True"
                        Visibility="Collapsed" />
                    
                    <TextBlock x:ConnectionId='4'
                        x:Name="QueryResponseTxt"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        IsTextSelectionEnabled="True"
                        TextWrapping="Wrap"
                        Visibility="Collapsed" />
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

