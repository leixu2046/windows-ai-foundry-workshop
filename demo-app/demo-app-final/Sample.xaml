<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Sample.Sample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:AIDevGallery.Sample"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Search Bar -->
        <Border
            Grid.Row="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
            BorderThickness="0,0,0,1"
            Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>
                
                <!-- Search bar aligned with middle panel -->
                <Grid Grid.Column="1" Margin="16,0">
                    <TextBox
                        x:Name="GlobalSearchBox"
                        PlaceholderText="Search reports, content, and more..."
                        FontSize="14"
                        Height="36"
                        Padding="12,8,70,8"
                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        CornerRadius="18"
                        KeyDown="GlobalSearchBox_KeyDown" />
                    <Button
                        x:Name="SearchButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,6,0"
                        Width="36"
                        Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="SearchButton_Click"
                        CornerRadius="16">
                        <FontIcon
                            FontSize="16"
                            Glyph="&#xE721;"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Reports List -->
            <Grid
                Grid.Column="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- New Report Button -->
                <StackPanel Grid.Row="0" Margin="16" Spacing="8">
                    <TextBlock
                        Text="Inspection Reports"
                        Style="{ThemeResource TitleTextBlockStyle}" />
                    <Button
                        x:Name="NewReportBtn"
                        HorizontalAlignment="Stretch"
                        Click="NewReportBtn_Click"
                        Style="{ThemeResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE710;" />
                            <TextBlock Text="New Report" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Reports List -->
                <ScrollViewer Grid.Row="1" Margin="8,0,8,8">
                    <ListView
                        x:Name="ReportsListView"
                        ItemsSource="{x:Bind Reports}"
                        SelectionChanged="ReportsListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="local:InspectionReport">
                                <Grid Margin="8" Padding="12" Background="{ThemeResource ControlFillColorDefaultBrush}" CornerRadius="4">
                                    <Grid.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem 
                                                Text="Rename Report" 
                                                Icon="Rename"
                                                Click="RenameReport_Click"
                                                Tag="{x:Bind}" />
                                            <MenuFlyoutItem 
                                                Text="Delete Report" 
                                                Icon="Delete"
                                                Click="DeleteReport_Click"
                                                Tag="{x:Bind}" />
                                        </MenuFlyout>
                                    </Grid.ContextFlyout>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Text="{x:Bind Title}"
                                        Style="{ThemeResource BodyStrongTextBlockStyle}"
                                        TextTrimming="CharacterEllipsis"
                                        DoubleTapped="ReportTitle_DoubleTapped"
                                        Tag="{x:Bind}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Text="{x:Bind CreatedDate}"
                                        Style="{ThemeResource CaptionTextBlockStyle}"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                
                <!-- Settings Button -->
                <Button
                    x:Name="SettingsBtn"
                    Grid.Row="2"
                    Margin="16"
                    HorizontalAlignment="Stretch"
                    Click="SettingsBtn_Click"
                    Background="{ThemeResource ControlFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource ControlStrokeColorSecondaryBrush}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontSize="16" Glyph="&#xE713;" />
                        <TextBlock Text="Settings" />
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Middle Panel - Editable Canvas or Settings -->
            <Grid
                Grid.Column="1"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                
                <!-- Document View -->
                <Grid x:Name="DocumentView" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Document Toolbar -->
                    <Grid Grid.Row="0" Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="400" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock
                            x:Name="CurrentReportTitle"
                            Grid.Column="0"
                            Text="Select or create a report"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            TextTrimming="CharacterEllipsis"
                            MaxLines="2" />
                        
                        <Button
                            x:Name="AddImageBtn"
                            Grid.Column="1"
                            Margin="16,0,0,0"
                            Click="AddImageBtn_Click"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xEE71;" />
                                <TextBlock Text="Insert Image" />
                            </StackPanel>
                        </Button>
                        
                        <TextBlock
                            Grid.Column="2"
                            Text="Type anywhere in the document, use Insert Image to add images at cursor"
                            Style="{ThemeResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0"
                            TextWrapping="Wrap" />
                    </Grid>

                    <!-- Rich Text Editor with Overlay Support -->
                    <Grid Grid.Row="1" Margin="16,0,16,16">
                        <Border
                            Background="White"
                            BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <RichEditBox
                                x:Name="DocumentEditor"
                                Margin="16"
                                Background="Transparent"
                                BorderThickness="0"
                                PlaceholderText="Start typing your inspection report here..."
                                TextWrapping="Wrap"
                                AcceptsReturn="True"
                                IsSpellCheckEnabled="True"
                                FontSize="14"
                                FontFamily="Segoe UI"
                                IsEnabled="False" />
                        </Border>
                        
                        <!-- Processing Overlay -->
                        <Border
                            x:Name="ProcessingOverlay"
                            Background="{ThemeResource SmokeFillColorDefaultBrush}"
                            CornerRadius="4"
                            Visibility="Collapsed">
                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="16">
                                <ProgressRing
                                    Width="48"
                                    Height="48"
                                    IsActive="True" />
                                <TextBlock
                                    Text="Generating image description..."
                                    Style="{ThemeResource BodyTextBlockStyle}"
                                    HorizontalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Settings View -->
                <Grid x:Name="SettingsView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Settings Header -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="16"
                        Orientation="Horizontal"
                        Spacing="8">
                        <Button
                            x:Name="BackToDocumentBtn"
                            Click="BackToDocumentBtn_Click"
                            Background="Transparent"
                            BorderThickness="0">
                            <FontIcon FontSize="16" Glyph="&#xE72B;" />
                        </Button>
                        <TextBlock
                            Text="AI Features Settings"
                            Style="{ThemeResource TitleTextBlockStyle}"
                            VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Settings Content -->
                    <ScrollViewer Grid.Row="1" Margin="16,0,16,16">
                        <StackPanel Spacing="24">
                            <TextBlock
                                Text="Configure which AI features are enabled. Disabled features will be grayed out and unavailable."
                                Style="{ThemeResource BodyTextBlockStyle}"
                                TextWrapping="Wrap"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                            <!-- OCR Toggle -->
                            <Border
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            Text="OCR Text Extraction"
                                            Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        <TextBlock
                                            Text="Extract text from images using optical character recognition"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Name="OcrToggle"
                                        Grid.Column="1"
                                        IsOn="True"
                                        Toggled="OcrToggle_Toggled" />
                                </Grid>
                            </Border>

                            <!-- Image Description Toggle -->
                            <Border
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            Text="Image Description"
                                            Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        <TextBlock
                                            Text="Generate AI-powered descriptions of images"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Name="ImageDescriptionToggle"
                                        Grid.Column="1"
                                        IsOn="True"
                                        Toggled="ImageDescriptionToggle_Toggled" />
                                </Grid>
                            </Border>

                            <!-- Text Summarization Toggle -->
                            <Border
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            Text="Report Summarization"
                                            Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        <TextBlock
                                            Text="Generate AI-powered summaries of inspection reports"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Name="TextSummarizationToggle"
                                        Grid.Column="1"
                                        IsOn="True"
                                        Toggled="TextSummarizationToggle_Toggled" />
                                </Grid>
                            </Border>

                            <!-- Standard Ticket Generation Toggle -->
                            <Border
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            Text="Ticket Generation"
                                            Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        <TextBlock
                                            Text="Generate structured tickets from inspection reports using standard AI model"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Name="TicketGenerationToggle"
                                        Grid.Column="1"
                                        IsOn="True"
                                        Toggled="TicketGenerationToggle_Toggled" />
                                </Grid>
                            </Border>

                            <!-- LoRA Ticket Generation Toggle -->
                            <Border
                                Background="{ThemeResource ControlFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock
                                            Text="LoRA Ticket Generation"
                                            Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                        <TextBlock
                                            Text="Generate enhanced tickets using LoRA-adapted AI model for improved accuracy"
                                            Style="{ThemeResource CaptionTextBlockStyle}"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    </StackPanel>
                                    <ToggleSwitch
                                        x:Name="LoraTicketGenerationToggle"
                                        Grid.Column="1"
                                        IsOn="True"
                                        Toggled="LoraTicketGenerationToggle_Toggled" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <!-- Right Panel - AI Assistant -->
            <Grid
                Grid.Column="2"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- AI Panel Header -->
                <StackPanel Grid.Row="0" Margin="16" Spacing="8">
                    <TextBlock
                        Text="AI Assistant"
                        Style="{ThemeResource TitleTextBlockStyle}" />
                    <TextBlock
                        x:Name="AiContextText"
                        Text="Select a report to activate AI assistance"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <!-- AI Response Area -->
                <ScrollViewer Grid.Row="1" Margin="16,0">
                    <TextBlock
                        x:Name="QueryResponseTxt"
                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                        IsTextSelectionEnabled="True"
                        TextWrapping="Wrap"
                        Visibility="Collapsed" />
                </ScrollViewer>

                <!-- Query Input -->
                <TextBox
                    x:Name="QueryTextBox"
                    Grid.Row="2"
                    Margin="16"
                    PlaceholderText="Additional notes or context for ticket generation..."
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    MinHeight="80"
                    IsEnabled="False" />

                <!-- Query Controls -->
                <StackPanel Grid.Row="3" Margin="16,0,16,16" Spacing="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Button
                            x:Name="SummarizeReportBtn"
                            Grid.Column="0"
                            HorizontalAlignment="Stretch"
                            Click="SummarizeReportBtn_Click"
                            IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE8BC;" />
                                <TextBlock Text="Summarize Report" />
                            </StackPanel>
                        </Button>
                        
                        <Button
                            x:Name="QueryStopBtn"
                            Grid.Column="1"
                            MinWidth="86"
                            Margin="8,0,0,0"
                            AutomationProperties.Name="Stop"
                            Click="QueryStopBtn_Click"
                            Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="16" Glyph="&#xE73B;" />
                                <TextBlock Text="Stop" />
                            </StackPanel>
                        </Button>
                    </Grid>
                    
                    <!-- Generate Ticket Button -->
                    <Button
                        x:Name="GenerateTicketStandardBtn"
                        HorizontalAlignment="Stretch"
                        Click="GenerateTicketStandardBtn_Click"
                        IsEnabled="False"
                        Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE8D7;" />
                            <TextBlock Text="Generate Ticket" />
                        </StackPanel>
                    </Button>
                    
                    <!-- Generate Ticket with LoRA Button -->
                    <Button
                        x:Name="GenerateTicketBtn"
                        HorizontalAlignment="Stretch"
                        Click="GenerateTicketBtn_Click"
                        IsEnabled="False"
                        Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontSize="16" Glyph="&#xE8D7;" />
                            <TextBlock Text="Generate Ticket with LoRA" />
                        </StackPanel>
                    </Button>
                    
                    <ProgressRing
                        x:Name="QueryLoader"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Center"
                        IsActive="True"
                        Visibility="Collapsed" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
